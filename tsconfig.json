{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./lib",
    "lib": ["es5", "es2015", "dom"],
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "types": ["react", "jest", "node", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
